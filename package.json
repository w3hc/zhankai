{
  "name": "zhankai",
  "version": "1.5.3",
  "description": "CLI tool for exporting repository content into a structured markdown file for LLM processing",
  "main": "dist/index.js",
  "bin": {
    "zhankai": "dist/src/index.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/w3hc/zhankai.git"
  },
  "scripts": {
    "build": "rm -rf dist && tsc && chmod +x dist/src/index.js && pnpm install -g . --force",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "ai",
    "llm",
    "mistral",
    "claude",
    "chatgpt",
    "typescript",
    "npm",
    "package",
    "cli",
    "tool"
  ],
  "author": "Julien BÃ©ranger",
  "license": "GPL-3.0",
  "dependencies": {
    "@octokit/rest": "^20.0.2",
    "commander": "^13.1.0",
    "ethers": "^6.13.5",
    "ignore": "^7.0.3",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "@types/node": "^22.13.9",
    "@types/prompts": "^2.4.9",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "@vitest/coverage-v8": "^3.0.8",
    "eslint": "^9.21.0",
    "typescript": "^5.8.2",
    "vitest": "^3.0.8"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}